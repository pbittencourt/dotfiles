# palette
set default-bg              "#272e33" # background
set default-fg              "#d3c6aa" # foreground
set statusbar-bg            "#272e33" # background
set statusbar-fg            "#d3c6aa" # foreground
set inputbar-bg             "#7a8478" # color8
set inputbar-fg             "#272e33" # background
set-highlight-color         "#dbbc7f" # color3
set-highlight-active-color  "#d699b6" # color5
set notification-error-bg   "#e67e80" # color1
set notification-error-fg   "#d3c6aa" # foreground
set notification-warning-bg "#dbbc7f" # color3
set notification-warning-fg "#272e33" # background
set notification-bg         "#272e33" # background
set notification-fg         "#d3c6aa" # foreground
set recolor-lightcolor      "#272e33" # background
set recolor-darkcolor       "#d3c6aa" # foreground

set recolor                     true
set adjust-open "best-fit"

# Remap keys
map r reload
map p print
map i recolor
map <C-=> zoom in
map <C--> zoom out
map R rotate
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
map <Left> navigate previous
map <Right> navigate next
map B jumplist backward
map b jumplist forward
